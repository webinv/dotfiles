{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#d3d7cf",
          "foreground": "#000000",
          "style": "diamond",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        },
        {
          "background": "#3465a4",
          "foreground": "#e4e4e4",
          "properties": {
            "home_icon": "~",
            "style": "full"
          },
          "style": "plain",
          "template": " \uf07c {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#ffbf00",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#c4a000{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#4e9a06{{ end }}"
          ],
          "foreground": "#000000",
          "properties": {
            "branch_icon": "\uf126 "
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#000000",
          "background_templates": [
            "{{ if gt .Code 0 }}#cc2222{{ end }}"
          ],
          "foreground": "#d3d7cf",
          "invert_powerline": true,
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " {{ if gt .Code 0 }}{{ reason .Code }}{{ else }}\uf42e{{ end }} ",
          "type": "status"
        },
        {
          "background": "#0b478c",
          "foreground": "#ffffff",
          "invert_powerline": true,
          "properties": {
            "fetch_version": true
          },
          "style": "plain",
          "template": " {{ .Full }} \ue608 ",
          "type": "php"
        },
        {
          "type": "kotlin",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#906cff",
          "template": " <b>K</b> {{ .Full }} "
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#4063D8",
          "template": " îœ¸ {{ .Full }} "
        },
        {
          "background": "#FFDE57",
          "foreground": "#111111",
          "invert_powerline": true,
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} \ue235 ",
          "type": "python"
        },
        {
          "background": "#689f63",
          "foreground": "#ffffff",
          "invert_powerline": true,
          "properties": {
            "fetch_version": true
          },
          "style": "plain",
          "template": " {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} \ue718 ",
          "type": "node"
        },
        {
          "background": "#ffff66",
          "foreground": "#111111",
          "invert_powerline": true,
          "style": "plain",
          "template": " \uf0ad ",
          "type": "root"
        },
        {
          "background": "#c4a000",
          "foreground": "#000000",
          "invert_powerline": true,
          "style": "plain",
          "template": " {{ .FormattedMs }} \uf252 ",
          "type": "executiontime"
        },
        {
          "background": "#d3d7cf",
          "foreground": "#000000",

          "style": "plain",

          "template": " {{ .CurrentDate | date .Format }} \uf017 ",
       
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#80ff00",
          "style": "plain",
          "template": "\n~",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "version": 3
}
